{
    "name": "keboola/csvmap",
    "description": "Flatten an object into a CSV file(s)",
    "license": "MIT",
    "keywords": ["csv", "object", "flatten"],
    "authors": [
        {
            "name": "Ondrej Vana",
            "email": "kachna@keboola.cz"
        }
    ],
    "require": {
        "keboola/php-utils": "^4.1",
        "keboola/php-csvtable": "^1.1",
        "keboola/csv": "^2.1",
        "php": "^7.1",
        "ext-json": "*"
    },
    "require-dev": {
        "keboola/coding-standard": "^13.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": ">=7.5"
    },
    "scripts": {
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php --standard=psr2 .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php --standard=psr2 .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "tests": "phpunit",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --strict",
            "@build"
        ]
    },
    "autoload": {
        "psr-0": {
            "Keboola\\CsvMap": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
